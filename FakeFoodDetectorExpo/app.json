{
  "expo": {
    "name": "TRUTH BITE",
    "slug": "truth-bite",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/logodesign.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/logodesign.png",
      "resizeMode": "contain",
      "backgroundColor": "#FF6B35"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "permissions": [
      "ACCESS_COARSE_LOCATION",
      "ACCESS_FINE_LOCATION"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.truthbite.app",
      "associatedDomains": [
        "applinks:fakefooddetector.app"
      ],
      "infoPlist": {
        "CFBundleURLTypes": [
          {
            "CFBundleURLName": "truth-bite",
            "CFBundleURLSchemes": ["truthbite"]
          }
        ],
        "NSLocationWhenInUseUsageDescription": "This app needs location access to show restaurants near you on the map.",
        "NSLocationAlwaysUsageDescription": "This app needs location access to show restaurants near you on the map."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/logodesign.png",
        "backgroundColor": "#FF6B35"
      },
      "package": "com.truthbite.app",
      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION"
      ],
      "intentFilters": [
        {
          "action": "VIEW",
          "autoVerify": true,
          "data": [
            {
              "scheme": "https",
              "host": "truthbite.app"
            },
            {
              "scheme": "truthbite"
            }
          ],
          "category": ["BROWSABLE", "DEFAULT"]
        }
      ]
    },
    "web": {
      "favicon": "./assets/logodesign.png"
    },
    "scheme": "truthbite"
  }
}